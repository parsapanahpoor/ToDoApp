@using ToDoApp.Application.Resources
@{
    var language = Context.Items["Language"]?.ToString() ?? "fa";
    var isPersian = language == "fa";
    var direction = isPersian ? "rtl" : "ltr";
}

<!DOCTYPE html>
<html lang="@language" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Translations.Landing.Title</title>
    
    <link rel="stylesheet" href="~/css/vazirmatn-font.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/admin/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/modern-design.css" asp-append-version="true" />
    
    <style>
        .landing-page {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            overflow: hidden;
        }

        /* Animated Background */
        .landing-page::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            top: -50%;
            left: -50%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: moveBackground 20s linear infinite;
        }

        @@keyframes moveBackground {
            0% { transform: translate(0, 0); }
            100% { transform: translate(50px, 50px); }
        }

        .landing-container {
            position: relative;
            z-index: 1;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .landing-nav {
            padding: 1.5rem 0;
        }

        .landing-hero {
            flex: 1;
            display: flex;
            align-items: center;
            padding: 4rem 0;
        }

        .hero-content {
            text-align: center;
            color: white;
        }

        .hero-title {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 800;
            margin-bottom: 1.5rem;
            line-height: 1.2;
            text-shadow: 0 4px 20px rgba(0,0,0,0.2);
        }

        .hero-subtitle {
            font-size: clamp(1.125rem, 2vw, 1.5rem);
            margin-bottom: 3rem;
            opacity: 0.95;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
            line-height: 1.6;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 4rem;
        }

        .hero-btn {
            padding: 1rem 2.5rem;
            font-size: 1.125rem;
            font-weight: 600;
            border-radius: var(--radius-xl);
            border: none;
            cursor: pointer;
            transition: all var(--transition-base);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .hero-btn-primary {
            background: white;
            color: var(--primary);
        }

        .hero-btn-primary:hover {
            transform: translateY(-4px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
        }

        .hero-btn-secondary {
            background: rgba(255,255,255,0.15);
            backdrop-filter: blur(10px);
            color: white;
            border: 2px solid rgba(255,255,255,0.3);
        }

        .hero-btn-secondary:hover {
            background: rgba(255,255,255,0.25);
            transform: translateY(-4px);
        }

        .features-section {
            margin-top: 4rem;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .feature-card {
            background: rgba(255,255,255,0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
            border-radius: var(--radius-2xl);
            padding: 2rem;
            transition: all var(--transition-base);
            text-align: center;
            color: white;
        }

        .feature-card:hover {
            transform: translateY(-8px);
            background: rgba(255,255,255,0.15);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }

        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            display: block;
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.75rem;
        }

        .feature-description {
            font-size: 1rem;
            opacity: 0.9;
            line-height: 1.6;
        }

        .lang-switcher {
            position: fixed;
            top: 1.5rem;
            left: 1.5rem;
            z-index: 100;
            display: flex;
            gap: 0.5rem;
            background: rgba(255,255,255,0.15);
            backdrop-filter: blur(10px);
            border-radius: var(--radius-full);
            padding: 0.5rem;
            border: 1px solid rgba(255,255,255,0.2);
        }

        .lang-btn {
            padding: 0.5rem 1rem;
            border-radius: var(--radius-full);
            border: none;
            background: transparent;
            color: white;
            cursor: pointer;
            transition: all var(--transition-base);
            font-weight: 600;
            font-size: 0.875rem;
        }

        .lang-btn.active {
            background: white;
            color: var(--primary);
        }

        .lang-btn:hover:not(.active) {
            background: rgba(255,255,255,0.1);
        }

        .scroll-indicator {
            position: absolute;
            bottom: 2rem;
            left: 50%;
            transform: translateX(-50%);
            animation: bounce 2s infinite;
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateX(-50%) translateY(0); }
            40% { transform: translateX(-50%) translateY(-10px); }
            60% { transform: translateX(-50%) translateY(-5px); }
        }

        @@media (max-width: 768px) {
            .features-grid {
                grid-template-columns: 1fr;
            }
            
            .hero-buttons {
                flex-direction: column;
                align-items: stretch;
            }
            
            .hero-btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="landing-page">
        <!-- Language Switcher -->
        <div class="lang-switcher">
            <button class="lang-btn @(isPersian ? "active" : "")" onclick="changeLanguage('fa')">
                ÝÇÑÓ?
            </button>
            <button class="lang-btn @(!isPersian ? "active" : "")" onclick="changeLanguage('en')">
                English
            </button>
        </div>

        <div class="landing-container">
            <div class="container-modern">
                
                <!-- Hero Section -->
                <div class="landing-hero">
                    <div class="hero-content animate-fade-in">
                        
                        <!-- Logo -->
                        <div style="font-size: 5rem; margin-bottom: 2rem; animation: bounce 2s infinite;">
                            ??
                        </div>

                        <!-- Title -->
                        <h1 class="hero-title">
                            @Translations.Landing.HeroTitle
                        </h1>

                        <!-- Subtitle -->
                        <p class="hero-subtitle">
                            @Translations.Landing.HeroDescription
                        </p>

                        <!-- CTA Buttons -->
                        <div class="hero-buttons">
                            <a href="/Account/Register" class="hero-btn hero-btn-primary">
                                <i class="fa fa-rocket"></i>
                                @Translations.Landing.GetStarted
                            </a>
                            <a href="/Account/Login" class="hero-btn hero-btn-secondary">
                                <i class="fa fa-sign-in"></i>
                                @Translations.Landing.Login
                            </a>
                        </div>

                        <!-- Features Section -->
                        <div class="features-section">
                            <div class="features-grid">
                                
                                <!-- Feature 1 -->
                                <div class="feature-card animate-fade-in" style="animation-delay: 0.1s;">
                                    <span class="feature-icon">?</span>
                                    <h3 class="feature-title">@Translations.Features.FastTitle</h3>
                                    <p class="feature-description">@Translations.Features.FastDescription</p>
                                </div>

                                <!-- Feature 2 -->
                                <div class="feature-card animate-fade-in" style="animation-delay: 0.2s;">
                                    <span class="feature-icon">??</span>
                                    <h3 class="feature-title">@Translations.Features.ModernTitle</h3>
                                    <p class="feature-description">@Translations.Features.ModernDescription</p>
                                </div>

                                <!-- Feature 3 -->
                                <div class="feature-card animate-fade-in" style="animation-delay: 0.3s;">
                                    <span class="feature-icon">??</span>
                                    <h3 class="feature-title">@Translations.Features.ResponsiveTitle</h3>
                                    <p class="feature-description">@Translations.Features.ResponsiveDescription</p>
                                </div>

                                <!-- Feature 4 -->
                                <div class="feature-card animate-fade-in" style="animation-delay: 0.4s;">
                                    <span class="feature-icon">??</span>
                                    <h3 class="feature-title">@Translations.Features.SecureTitle</h3>
                                    <p class="feature-description">@Translations.Features.SecureDescription</p>
                                </div>

                                <!-- Feature 5 -->
                                <div class="feature-card animate-fade-in" style="animation-delay: 0.5s;">
                                    <span class="feature-icon">??</span>
                                    <h3 class="feature-title">@Translations.Features.OrganizedTitle</h3>
                                    <p class="feature-description">@Translations.Features.OrganizedDescription</p>
                                </div>

                                <!-- Feature 6 -->
                                <div class="feature-card animate-fade-in" style="animation-delay: 0.6s;">
                                    <span class="feature-icon">??</span>
                                    <h3 class="feature-title">@Translations.Features.NotificationsTitle</h3>
                                    <p class="feature-description">@Translations.Features.NotificationsDescription</p>
                                </div>

                            </div>
                        </div>

                        <!-- Scroll Indicator -->
                        <div class="scroll-indicator">
                            <i class="fa fa-chevron-down" style="color: white; font-size: 1.5rem; opacity: 0.7;"></i>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="~/js/modern-app.js"></script>
    <script>
        function changeLanguage(lang) {
            window.location.href = '?lang=' + lang;
        }

        // Parallax effect on scroll
        window.addEventListener('scroll', function() {
            const scrolled = window.pageYOffset;
            const hero = document.querySelector('.landing-hero');
            if (hero) {
                hero.style.transform = 'translateY(' + (scrolled * 0.5) + 'px)';
                hero.style.opacity = 1 - (scrolled / 500);
            }
        });
    </script>
</body>
</html>
