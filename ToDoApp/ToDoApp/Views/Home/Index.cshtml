@{
    ViewData["Title"] = "صفحه اصلی";
    var language = Context.Items["Language"]?.ToString() ?? "fa";
    var isPersian = language == "fa";
}

<div class="text-center mt-5">

    @if (User.Identity.IsAuthenticated)
    {
        <h2>@(isPersian ? "خوش آمدید" : "Welcome") @User.Identity.Name</h2>
        
        <hr class="my-4" />
        
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@(isPersian ? "تقویم هفتگی" : "Weekly Calendar")</h5>
                        <p class="card-text">@(isPersian ? "مدیریت Task های خود را در تقویم هفتگی انجام دهید" : "Manage your tasks in the weekly calendar")</p>
                        <a class="btn btn-primary btn-lg" 
                           asp-controller="Task" 
                           asp-action="WeeklyCalendar">
                            <i class="fa fa-calendar"></i> 
                            @(isPersian ? "مشاهده تقویم" : "View Calendar")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h2>@(isPersian ? "به برنامه مدیریت کارها خوش آمدید" : "Welcome to ToDo App")</h2>
        <p class="lead">@(isPersian ? "لطفا وارد شوید یا ثبت نام کنید" : "Please login or register")</p>
        
        <div class="mt-4">
            <a class="btn btn-primary btn-lg me-2" asp-controller="Account" asp-action="Login">
                @(isPersian ? "ورود" : "Login")
            </a>
            <a class="btn btn-outline-primary btn-lg" asp-controller="Account" asp-action="Register">
                @(isPersian ? "ثبت نام" : "Register")
            </a>
        </div>
    }

</div>
